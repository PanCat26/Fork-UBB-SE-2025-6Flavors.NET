<Window
    x:Class="WorkoutApp.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorkoutApp.Models"
    xmlns:views="using:WorkoutApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MainWindow">

    <Grid Background="Red">
        <!-- Grid with rows for header, menu, search bar, and content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Optional frame for navigation (currently unused) -->
        <Frame x:Name="MainFrame"/>

        <!-- Title/Header -->

        <!-- Main Content Grid -->
        <Grid Grid.Row="3" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Product Area -->
                <ColumnDefinition Width="1*"/>
                <!-- Offers -->
            </Grid.ColumnDefinitions>

            <!-- LEFT SIDE: Filters + Products -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <!-- Filters -->
                    <ColumnDefinition Width="2*"/>
                    <!-- Product Grid -->
                </Grid.ColumnDefinitions>

                <!-- CATEGORY FILTER PANEL (Initially hidden) -->
                <!-- Change to Collapsed later if needed -->
                <StackPanel x:Name="FilterOptionsPanel"
            Grid.Column="0"
            Visibility="Visible"
            Background="AliceBlue"
            Margin="10"
            Padding="10"
            Width="200">


                    <!-- ðŸ”½ Category Filter Component (UserControl) -->
                    <views:CategoryFilter />

                </StackPanel>

                <!-- PRODUCT GRID -->
                <GridView x:Name="ProductsGridView"
                          Grid.Column="1"
                          Margin="20"
                          HorizontalAlignment="Center"
                          Width="400">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:Product">
                            <StackPanel Orientation="Vertical"
                                        Padding="10"
                                        Background="LightGray"
                                        CornerRadius="10">
                                <Image Source="{Binding FileUrl}"
                                       Height="100"
                                       Width="100"
                                       Stretch="Uniform"/>
                                <TextBlock Text="{Binding Name}"
                                           Tapped="SeeProduct_Click"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Price}"
                                           FontSize="14"
                                           Foreground="Green"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>

            <!-- RIGHT SIDE: Promotions / Offers -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0,10,0,10"
                        Background="DarkGray">
                <StackPanel Padding="10">
                    <TextBlock Text="Special Offer!"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <Image Source="https://example.com/offer1.jpg"
                           Height="150"
                           Width="150"/>
                    <TextBlock Text="Discount on Protein Powder!"
                               FontSize="14"
                               Foreground="Yellow"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Limited Time Deal!"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <Image Source="https://example.com/offer2.jpg"
                           Height="150"
                           Width="150"/>
                    <TextBlock Text="Get 2 for 1 on Sports Equipment!"
                               FontSize="14"
                               Foreground="Yellow"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
